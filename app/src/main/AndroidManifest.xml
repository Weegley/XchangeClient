<manifest package="com.weegley.xchangeclient"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Тип FGS для Android 14+ (на старых игнорируется) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <uses-permission android:name="android.permission.INTERNET"/>



    <application
        android:name=".XcApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.XchangeClient">

        <activity
            android:name="com.weegley.xchangeclient.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.SessionService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>
</manifest>
